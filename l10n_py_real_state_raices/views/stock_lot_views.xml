<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_production_lot_form_inherit" model="ir.ui.view">
        <field name="name">stock.production.lot.form</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']" position="inside">
                <group>
                    <field name="l10n_py_register"/>
                    <field name="l10n_py_surface"/>
                </group>
                <group>
                    <field name="l10n_py_license"/>
                    <field name="l10n_py_owner" widget="res_partner_many2one" context="{'res_partner_search_mode': ('supplier' or False),}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>